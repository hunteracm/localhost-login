  "bugs": {
    "url": "https://github.com/hunteracm/localhost-login/issues"
  },
  "homepage": "https://github.com/hunteracm/localhost-login#readme",
  "devDependencies": {
    "concurrently": "^5.1.0"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5"
  }
}
